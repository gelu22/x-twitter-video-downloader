{
  "manifest_version": 3,
  "name": "X.com Video Downloader",
  "version": "1.5",
  "description": "Download videos from X.com (Twitter) directly to your disk with one click.",
  "permissions": [
    "clipboardRead",
    "downloads"
  ],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.twimg.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
